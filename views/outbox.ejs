  <body>
    <%- include('partials/header') %>

    <div class="content">
      <div class="nav_area"><%- include('partials/nav') %></div>
      <div class="messages_area">
        <h3 class="inbox">Hộp thư đến</h3>


        <div class="emailList_sections">
          <div class="section section_selected">
            <span class="material-symbols-outlined"> inbox </span>
            <h4>Primary</h4>
          </div>

          <div class="section">
            <span class="material-symbols-outlined"> groups </span>
            <h4>Social</h4>
          </div>

          <div class="section">
            <span class="material-symbols-outlined"> sell </span>
            <h4>Promotions</h4>
          </div>
        </div>

        <div class="emailList">
          <div class="emailList_settings">
            <div class="emailList_settingsLeft">
              <input type="checkbox" />
              <span class="material-symbols-outlined">
                keyboard_arrow_down
              </span>
              <span class="material-symbols-outlined"> redo </span>
              <span class="material-symbols-outlined"> more_vert </span>
            </div>

            <div class="emailList_settings">
  <div class="emailList_settingsLeft">
    <input type="checkbox" id="select-all" /> Chọn tất cả
    <span class="material-symbols-outlined"> keyboard_arrow_down </span>
    <span class="material-symbols-outlined"> redo </span>
    <span class="material-symbols-outlined"> more_vert </span>
  </div>

  <div class="emailList_settingsRight">
    <button id="delete-selected" class="delete-button">
      Xóa đã chọn
    </button>
  </div>
</div>


       </div>
       
        </div>
        <div class="pagination" id="pagination-buttons">
          <a href="#" id="prev" class="page-btn">Trước</a>
          <span id="page-info">Page 1 / 5</span>
          <a href="#" id="next" class="page-btn">Sau</a>
        </div>
      </div>
      <div>
        
      </div>
    
    </div>

    <script>
          // Danh sách email từ backend
      const emails = <%- JSON.stringify(emails) %>;
      const pageSize = 5; // Số lượng email mỗi trang
      let currentPage = 1; // Trang hiện tại

      // Hàm hiển thị email cho trang hiện tại
      function displayEmails(page) {
        const start = (page - 1) * pageSize;
        const end = start + pageSize;
        const pagedEmails = emails.slice(start, end);

        // Dynamically update the email list based on the current page
        const emailListContainer = document.querySelector('.emailList');
        emailListContainer.innerHTML = ''; // Clear current list

        pagedEmails.forEach(email => {
          const emailRow = document.createElement('div');
          emailRow.classList.add('emailRow');
          emailRow.innerHTML = `
            <div class="emailRow_options">
              <input type="checkbox" />
              <span class="material-symbols-outlined"> star </span>
              <span class="material-symbols-outlined"> label_important </span>
            </div>
            <a href="/email/${email.id}">
              <h3 class="emailRow_title">${email.sender_email}</h3>
              <div class="emailRow_message">
                <h4><span class="emailRow_description">${email.subject}</span></h4>
              </div>
              <div class="emailRow_message">
                <h4><span class="emailRow_description">${email.body}</span></h4>
              </div>
            </a>
            <p class="emailRow_time">10pm</p>
            <a class="delete" href="/email/delete/${email.id}">
              <span class="material-symbols-outlined"> delete </span>
            </a>
          `;
          emailListContainer.appendChild(emailRow);
        });

        // Update page info
        document.getElementById('page-info').textContent = `Page ${currentPage} / ${Math.ceil(emails.length / pageSize)}`;
      }

      // Handle Next and Previous buttons
      document.getElementById('prev').addEventListener('click', () => {
        if (currentPage > 1) {
          currentPage--;
          displayEmails(currentPage);
        }
      });

      document.getElementById('next').addEventListener('click', () => {
        if (currentPage < Math.ceil(emails.length / pageSize)) {
          currentPage++;
          displayEmails(currentPage);
        }
      });

      // Initially display the first page
      displayEmails(currentPage);
    </script>
  </body>
