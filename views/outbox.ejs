<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      
      .container_swap {
        width: 700px;
      }

      .div_left {
        width: 200px;
        float: left;
        text-align: center;
      }

      .div_right {
        width: 200px;
        float: left;
        text-align: center;
      }

      .content {
        display: flex;
        height: 100vh;
      }

      .nav_area {
        width: 250px;
        background-color: #f0f0f0;
        color: white;
        padding: 20px;
        box-sizing: border-box;
      }

      .messages_area {
        margin-left: auto;
        margin-right: auto;
        width: 75%;
      }

      .messages {
        width: 100%;
        font-size: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px;
        border-bottom: 0.8px solid #ced4da;
        color: var(--dark-gray);
      }

      .email-item {
        display: flex;
        justify-content:right;
        align-items: center;
        padding: 5px 0;
      }
     
      
      .emailList_settings {
        position: sticky;
        top: 0;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid whitesmoke;
        background-color: white;
        z-index: 999;
        padding: 8px;
      }
      .emailList_settingsLeft {
        display: flex;
        align-items: center;
      }
      .emailList_settings .material-symbols-outlined {
        margin: 5px;
        cursor: pointer;
      }
      .section {
        display: flex;
        align-items: center;
        border-bottom-width: 2px;
        padding: 15px;
        min-width: 200px;
        cursor: pointer;
        color: grey;
        border-width: 0;
      }
      .emailList_sections {
        position: sticky;
        top: 0;
        display: flex;
        background-color: white;
        border-bottom: 1px solod whitesmoke;
        z-index: 999;
      }
      .section_selected {
        background-color: whitesmoke;
        border-left: 3px;
        color: red;
        border-bottom: 3px solid red;
      }
      .section_selected .material-symbols-outlined {
        color: red;
      }
      .section:hover {
        background-color: whitesmoke;
        border-width: 3px;
      }
      .section h4 {
        font-size: 14px;
        margin-left: 15px;
      }
      .emailRow_options{
        display: flex;
        align-items: center;
      }
      .emailRow_options .material-symbols-outlined,input{
        margin: 5px;

      }
      .emailRow{
        display: flex;
        align-items: center;
        height: 50px;
        border-bottom:1px solid whitesmoke;
        cursor: pointer;
        z-index: 999;
      }
      .emailRow:hover {
        border-top: 1px solid whitesmoke;
        box-shadow: 0 4px 4px -2px rgba(0,0,0,0.24);
      }
      .emailRow_message{
        display: flex;
        flex: 0.8;
        align-items: center;
        font-size: 13px;
      }
      .emailRow_message h4{
        width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding-left: 5px;
        padding-right: 5px;
      }
      .emailRow_title{
        font-size: 15px;
        flex: 0.3;
        width: 400px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding-left: 5px;
        padding-right: 5px;
      }
      .emailRow_time{
        padding-right: 15px;
        font-size: 10px;
        font-weight: bold;
      }
      .emailRow_description{
        font-weight: 400;
        color: grey;
        padding-left: 20px;
      }
      a{
        display: flex;
        width: 1500px;
      }
      .delete{
        margin-left: 50px;
        display: flex;
        justify-content: flex-end;
      }


  .pagination {
  display: flex;
  justify-content: center; /* Đặt các nút ở giữa */
  align-items: center;
  gap: 12px; /* Tăng khoảng cách giữa các phần tử */
  margin-left: 80px;
  margin-top: 20px;
}

.pagination a,
.pagination span {
  
  justify-content: flex-start;
  text-decoration: none;
  justify-content: s;
  color: #333;
  padding: 10px 15px; 
  border-radius: 4px;
  background-color: #f1f1f1; 
  transition: background-color 0.3s ease;
}

.pagination a:hover {
  background-color: #007bff; 
  color: white; 
}

#pagination-buttons {
  display: flex;
  justify-content: center;
  justify-items: center;
  gap: 15px; 
  width: 30px;
}

#page-info {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666; 
  font-weight: 600;
}

#page-info{
  display: flex;

}

.inbox{
  display: flex;
  justify-content: center;
}
</style>
