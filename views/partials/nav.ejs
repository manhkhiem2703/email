    <script>
      
      document.addEventListener("DOMContentLoaded", function () {
        const modal = document.getElementById("composeModal");
        const closeBtn = document.querySelector(".close");
        const composeButton = document.getElementById("composeButton");
        const form = document.getElementById("composeForm");

        // Mở modal khi nhấn nút "Soạn Thư"
        composeButton.onclick = function () {
          modal.style.display = "block";
          resetForm()
        };

        // Đóng modal khi click vào dấu "X"
        closeBtn.onclick = function () {
          modal.style.display = "none";
        };

        // Đóng modal khi click ra ngoài modal
        window.onclick = function (event) {
          if (event.target === modal) {
            modal.style.display = "none";
            resetForm();
          }
        };

        // Xử lý gửi email qua fetch mà không chuyển trang
        form.onsubmit = function (event) {
          event.preventDefault(); // Ngừng hành động gửi form mặc định

          const formData = new FormData(form);

          fetch("/email/compose", {
            method: "POST",
            body: formData,
          })
            .then((response) => response.json()) // Đảm bảo API trả về JSON
            .then((data) => {
              if (data.success) {
                alert("Email đã được gửi thành công!");
                window.location.assign('/email/inbox')
                modal.style.display = "none"; // Ẩn modal khi gửi thành công
              } else {
                alert("Đã xảy ra lỗi khi gửi email.");
              }
            })
            .catch((error) => {
              console.error("Error:", error);
              alert("Đã xảy ra lỗi khi gửi email.");
            });
            
        };
      });
      function resetForm() {
        composeForm.reset(); // Reset toàn bộ form
        attachmentInfo.textContent = ""; // Xóa thông tin tệp đã chọn
      }

      document
        .getElementById("attachment")
        .addEventListener("change", function (event) {
          const file = event.target.files[0]; // Lấy tệp đầu tiên từ input
          const attachmentInfo = document.getElementById("attachmentInfo"); // Lấy phần tử hiển thị thông tin tệp

          if (file) {
            const fileName = file.name; // Lấy tên tệp
            const fileSize = (file.size / 1024).toFixed(2); // Lấy kích thước tệp (MB)

            // Hiển thị thông tin tệp vào phần tử #attachmentInfo
            attachmentInfo.textContent = `Tệp: ${fileName} (${fileSize} KB)`;
          } else {
            attachmentInfo.textContent = ""; // Nếu không có tệp nào được chọn, không hiển thị gì
          }
        });
        
        
    </script>
