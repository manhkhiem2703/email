<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="main_body">
      <div class="sidebar">
        <div>
          <div id="composeModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <form
                id="composeForm"
                method="POST"
                enctype="multipart/form-data"
                class="compose-form"
              >
                <div class="form-header sidebar_compose">
                  <h2>Soạn Thư</h2>
                </div>

                <div class="form-group">
                  <label for="receiver_email">Đến:</label>
                  <input
                    type="email"
                    name="receiver_email"
                    id="receiver_email"
                    required
                    class="input-field"
                  />
                </div>

                <div class="form-group">
                  <label for="subject">Tiêu đề:</label>
                  <input
                    type="text"
                    name="subject"
                    id="subject"
                    required
                    class="input-field"
                  />
                </div>

                <div class="form-group">
                  <label for="message">Nội dung:</label>
                  <textarea
                    name="message"
                    id="message"
                    required
                    class="textarea-field"
                  ></textarea>
                </div>

                <div class="form-group">
                  <label for="attachment">Đính kèm:</label>
                  <input
                    type="file"
                    name="attachment"
                    id="attachment"
                    class="input-file"
                  />
                  <div id="attachmentInfo" class="attachment-info"></div>
                </div>

                <div class="form-footer">
                  <button type="submit" class="submit-btn">Gửi</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <button class="sidebarOption_active" id="composeButton">
          Soạn Thư
        </button>

        <a href="/email/inbox">
          <div class="sidebarOption sidebarOption_active">
            <span class="material-symbols-outlined"> inbox </span>
            <h3>Inbox</h3>
          </div>
        </a>
        <div class="sidebarOption sidebarOption_active">
          <span class="material-symbols-outlined"> schedule </span>
          <h3>Snoozed</h3>
        </div>
        <div class="sidebarOption sidebarOption_active">
          <span class="material-symbols-outlined"> label_important </span>
          <h3>important</h3>
        </div>
